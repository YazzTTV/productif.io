FROM node:22

WORKDIR /app

# System dependencies required for native modules and healthcheck
RUN apt-get update && apt-get install -y \
  curl \
  python3 \
  make \
  g++ \
  && rm -rf /var/lib/apt/lists/*

# Copy package files
COPY package*.json ./
COPY prisma ./prisma/

# Install dependencies (bypass peer conflicts from mobile packages)
RUN npm ci --legacy-peer-deps

# Generate Prisma client
RUN npx prisma generate

# Copy the rest of the application
COPY . .

ARG PORT=3001
ENV PORT=$PORT
EXPOSE $PORT

HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -fsS http://localhost:$PORT/health || exit 1

# Start: run migrations then launch the AI service
CMD ["sh", "-lc", "npx prisma migrate deploy && npm run start:ai"]